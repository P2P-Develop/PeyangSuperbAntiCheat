#!/bin/bash

if [ ! -z $1 ]; then
  export psacsrc="${1}/target/PeyangSuperbAntiCheat-0.1.jar"
else
  read -p "Repository Root:" reporoot
  export psacsrc="${reporoot}/target/PeyangSuperbAntiCheat-0.1.jar"
fi

if [ $1 -eq "-h" ] || [ $1 -eq "--help" ]; then
  echo "Usage: ./install [PSAC repo root] [dist]"
  echo "Ask both without arguments."
fi

if [ ! -z $2 ]; then
  export psacdist=${2}
else
  read -p "Plugin install dir(Auto create directory):" ans
  export psacdist="${ans}/PSAC.jar"
fi

install -Dm755 ${psacsrc} ${psacdist} && echo "SUCCESS: PeyangSuperbAntiCheat Successfly Installed."
